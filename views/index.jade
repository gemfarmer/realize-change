extends layout

block content
	.container#partialHeader
		div.row.jumbotron#splash
			h2 #{title}
			
			if username
				if username == "login"
					p(style="color:#b94a48;") You need to login to access that page...
					a.btn.btn-default(href='/auth/google') Login with Google
				else
					p #{subtitle}
					p Welcome #{username}
					a.btn.btn-default(href='/logout') Log Out
			else
				p #{subtitle}
				a.btn.btn-default(href='/auth/google') Login with Google
							
